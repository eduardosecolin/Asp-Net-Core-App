@model AppCareClinicMed.Models.USUARIOS

@{
    Layout = "../Shared/_LayoutLogin.cshtml";
}



<div class="login-form">
    <form asp-action="Login" method="post">

        @{
            try {
                var erro = TempData["ErrorLogin"].ToString();
                <h5 class="text-danger">@erro</h5>
            }
            catch {

            }
        }

        <div class="text-center" style="font-size:xx-large">Login</div>
        <br />
        <div class="form-group">
            <input type="text" class="form-control input-lg" asp-for="usuario" placeholder="Usuário">
            <span asp-validation-for="usuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control input-lg" asp-for="senha" placeholder="Password">
            <span asp-validation-for="senha" class="text-danger"></span>
        </div>
        <div class="form-group clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Lembrar</label>
            <button type="submit" class="btn btn-primary btn-lg pull-right">Entrar</button>
        </div>
        <br />
        <div class="hint-text">Não te uma conta? contacte o admistrador</div>
    </form>
</div>
