@model IEnumerable<AppCareClinicMed.Models.PACIENTE>

@{
    ViewData["Title"] = "Index";
}

<h1>Pacientes</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table" style="font-size:x-small">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                Sexo
            </th>
            <th>
                Estado Civil
            </th>
            <th>
                Endereço
            </th>
            <th>
                Número
            </th>
            <th>
                Bairro
            </th>
            <th>
                Cidade
            </th>
            <th>
                Estado
            </th>
            <th>
                País
            </th>
            <th>
                Cpf
            </th>
            <th>
                Rg
            </th>
            <th>
                Convenio
            </th>
            <th>
                E-mail
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_civil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais.Pais)
            </td>
            <td data-mask="000.000.000-00">
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td data-mask="00.000.000-0">
                @Html.DisplayFor(modelItem => item.Rg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Convenio.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>



