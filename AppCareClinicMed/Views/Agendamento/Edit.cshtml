@model AppCareClinicMed.Models.AGENDAMENTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="float:left; width:300px">
                <label class="control-label">Paciente</label>
                <select asp-for="PACIENTEId" class="form-control" asp-items="ViewBag.PACIENTEId"></select>
            </div>
            <div class="form-group" style="float:right; width:300px">
                <label class="control-label">Médico</label>
                <select asp-for="MEDICOId" class="form-control" asp-items="ViewBag.MEDICOId"></select>
            </div>
            <div class="form-group" style="float:left; width:300px">
                <label class="control-label">Data do agendamento</label>
                <input asp-for="Data_agendamento" class="form-control" />
                <span asp-validation-for="Data_agendamento" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:right; width:300px">
                <label class="control-label">Tipo de Consulta</label>
                <select asp-for="TIPO_CONSULTAId" class="form-control" asp-items="ViewBag.TIPO_CONSULTAId"></select>
            </div>
            <div class="form-group" style="float:left; width:300px">
                <label class="control-label">Convenio</label>
                <select asp-for="CONVENIOId" class="form-control" asp-items="ViewBag.CONVENIOId"></select>
            </div>
            <div class="form-group" style="float:right; width:300px">
                <label class="control-label">Forma de pagamento</label>
                <select asp-for="FORMA_PAGAMENTOId" class="form-control" asp-items="ViewBag.FORMA_PAGAMENTOId"></select>
            </div>
            <div class="form-group" style="float:left; width:300px">
                <label class="control-label">Retorno</label>
                <select asp-for="retorno" class="form-control">
                    <option value="Sim">Sim</option>
                    <option value="Nao">Não</option>
                </select>
                <span asp-validation-for="retorno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-block btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

