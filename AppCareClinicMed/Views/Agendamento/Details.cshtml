@model AppCareClinicMed.Models.AGENDAMENTO

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Retorno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.retorno)
        </dd>
        <dt class="col-sm-2">
            Data do agendamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data_agendamento)
        </dd>
        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nome)
        </dd>
        <dt class="col-sm-2">
            Médico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medico.Nome)
        </dd>
        <dt class="col-sm-2">
            Tipo de consulta
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo_consulta.Descricao)
        </dd>
        <dt class="col-sm-2">
            Convenio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Convenio.Descricao)
